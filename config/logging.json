{
    "appenders": {
        "console": {
            "type": "stdout"
        },
        "error": {
            "type": "stderr"
        },
        "file": {
            "type": "dateFile",
            "filename": "logs/insure-base.log",
            "pattern": ".yyyy-MM-dd.log"
        },
        "mail": {
            "type": "smtp",
            "transport": "SMTP",
            "SMTP": {
                "host": "smtp.anyitech.ltd",
                "secure": false,
                "port": 25,
                "auth": {
                    "user": "service@anyitech.ltd",
                    "pass": "anyitech"
                }
            },
            "recipients": "dong.li@anyi-tech.com",
            "sender": "service@anyitech.ltd",
            "subject": "保险产品-错误日志",
            "sendInterval": 600
        }
    },
    "categories": {
        "debug": {
            "appenders": [
                "console"
            ],
            "level": "DEBUG"
        },
        "default": {
            "appenders": [
                "error",
                "file"
            ],
            "level": "INFO"
        },
        "apis": {
            "appenders": [
                "error",
                "file"
            ],
            "level": "INFO"
        },
        "oops": {
            "appenders": [
                "error",
                "file",
                "mail"
            ],
            "level": "ERROR"
        }
    }
}